<%= render "shared/first_header" %>
<%= render "shared/header" %>

<h2>トレーニング内容</h2>

<div class="show">
<p>
  <strong>トレーニング内容</strong>
  <%= @training .training_name %>
</p>

<p>
  <strong>重量</strong>
  <%= @training.weight %>
  <span>kg</script>
</p>

<p>
  <strong>回数</strong>
  <%= @training.number %>
  <span>回</script>
</p>

<p>
  <strong>日付</strong>
  <%= @training.start_time.strftime("%m-%d") %>
</p>

<div class="d-grid gap-2">
<%= link_to '編集', edit_training_path(@training), class: "btn btn-primary" %>
<%= link_to '消去',training_path(@training.id), class: "btn btn-primary", method: :delete, data: { confirm: '本当に?' } %>
<%= link_to '戻る', trainings_path, class: "btn btn-primary" %>
</div>
</div>