<%= render "shared/first_header" %>
<%= render "shared/header" %>

<div class="trainings-main">
    <h2 class="trainings-title">トレーニング内容を記載</h2>
    <%= form_with(model: @training, local: true) do |f| %>

      <%= render 'shared/error_messages', model: f.object %>


      <div class="mb-3">
      <label for="exampleFormControlInput1" class="form-label">*必須* トレーニング名</label>
       <%= f.text_area :training_name, class: "form-control", id: "exampleFormControlInput1", placeholder:"トレーニング名（必須 40文字まで)" ,maxlength:"40" %>
       </div>
  

      <div class="mb-3">
      <label for="exampleFormControlInput1" class="form-label">*必須* 重量</label>
       <%= f.text_field :weight, class: "form-control", id: "exampleFormControlInput1", placeholder:"重量" ,rows:"7" ,maxlength:"1000" %> <span>kg</script>
       </div>
      
    
      <div class="mb-3">
     <label for="exampleFormControlInput1" class="form-label">*必須* 回数</label>
      <%= f.text_field :number, class: "form-control", id: "exampleFormControlInput1", placeholder:"回数" ,rows:"7" ,maxlength:"1000" %>
      <span>回</script>
      </div>


      <div class="mb-3">
      <label for="exampleFormControlInput1" class="form-label">*必須* 日付</label>
      <div>
     <%= f.datetime_select :start_time, class: "form-control", id: "exampleFormControlInput1" %>
     </div>
     </div>

     <div class="d-grid gap-2">
     <%= f.submit "記録する", class: "btn btn-primary" %>
     <%= link_to '戻る', root_path, class: "btn btn-primary" %>
   </div>
 <% end %>
</div>


  
    
