<%= render "shared/first_header" %>
<%= render "shared/header" %>

<button type="button" class="btn btn-outline-success">
<%= link_to "トレーニング記録をつける", new_training_path %>
</button>
<button type="button" class="btn btn-outline-secondary">
<%= link_to "摂取カロリー記録をつける", new_calory_path %>
</button>

<div class="main">
  <%= month_calendar(events: @trainings, calories: @calories) do |date, trainings, calories| %>
    <%= date.day %>

<div>
      <strong>トレーニング記録:</strong>
      <% trainings.each do |training| %>
        <div>
          <%= link_to training.training_name, training %>
        </div>
      <% end %>
</div>


<div>
      <strong>摂取カロリー記録:</strong>
      <% calories.each do |calory| %>
          <div>
            <%= link_to calory.calories_intake, calory %>
          </div>
        <% end %>
    </div>

<% end %>
</div>
