<%= render "shared/header" %>

<%= link_to "トレーニング記録をつける", new_training_path %>
<%= link_to "摂取カロリー記録をつける", new_calory_path %>

<div class="main">
  <%= month_calendar(events: @trainings, calories: @calories) do |date, trainings, calories| %>
    <%= date.day %>

    <% trainings.each do |training| %>
      <div>
        <%= link_to training.training_name, training %>
      </div>
      <% end %>

      <% if calories %>
      <% calories.each do |calory| %>
        <div>
          <%= link_to calory.calories_intake, calory %>
        </div>
        <% end %>
        <% end %>

<% end %>
</div>
</div>
</div>