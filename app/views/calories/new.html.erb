<%= render "shared/first_header" %>
<%= render "shared/header" %>

<div class="calory-main">
    <h2 class="calory_content">接種カロリー量を記載</h2>
    <%= form_with(model: @calory, local: true) do |f| %>

      <%= render 'shared/error_messages', model: f.object %>

      <div class="mb-3">
     <label for="exampleFormControlInput1" class="form-label">*必須* 摂取カロリー量</label>
      <%= f.text_field :calories_intake, class: "form-control", id: "exampleFormControlInput1" %>
      <span>kcal</script>
      </div>
      
      <div class="mb-3">
      <label for="exampleFormControlInput1" class="form-label">*必須* 日付</label>
      <div>
     <%= f.datetime_select :start_time, class: "form-control", id: "exampleFormControlInput1" %>
     </div>
     </div>
     
     <div class="d-grid gap-2">
     <%= f.submit "記録する", class: "btn btn-primary" %>
     <%= link_to '戻る', root_path, class: "btn btn-primary" %>
   </div>
 <% end %>
</div>


    
