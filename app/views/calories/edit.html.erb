<%= render "shared/first_header" %>
<%= render "shared/header" %>

<h2>摂取カロリー量を編集する</h2>

<%= form_with(model: @calory, local: true) do |f| %>
  <%= render 'shared/error_messages', model: f.object %>
  
  <div class="mb-3">
  <label for="exampleFormControlInput1" class="form-label">摂取カロリー量</label>
    <%= f.text_field :calories_intake, class: "form-control", id: "exampleFormControlInput1" %> <span>kcal</span>
  </div>

  <div class="mb-3">
  <label for="exampleFormControlInput1" class="form-label">日付</label>
    <%= f.datetime_select :start_time, class: "form-control", id: "exampleFormControlInput1" %> 
  </div>

  <div class="d-grid gap-2">
  <%= f.submit "更新する", class: "btn btn-primary" %>
  <%= link_to "戻る", :back, class: "btn btn-primary"%>
  </div>
  <% end %>
  