<%= render "shared/first_header" %>
<%= render "shared/header" %>


<%= form_with(model: @calory, local: true) do |f| %>
  <%= render 'shared/error_messages', model: f.object %>
  
  <div class="calories">
    <div class="training_name">摂取カロリー量</div>
    <%= f.text_field :calories_intake %>
    <span>kcal</script>
  </div>

  <div class="calories">
    <div class="times">時間</div>
